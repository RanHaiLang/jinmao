/* pages/baoxiu/baoxiu.wxss */
.main{
  position: relative;
  padding-bottom: 130rpx;
}
.block{
  font-size: 26rpx;
  border-top: 1px solid #e7e6eb;
  margin-top: -1px;
}
.header{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #222;
  background-color: #f7f7f7;
  min-height: 80rpx;
  line-height: 80rpx;
  padding-left: 32rpx;
}
.header-text{
  flex: 1;
}
.header .iconfont{
  margin: 0 26rpx 0;
  font-size: 36rpx;
}
.content .item{
  padding-left: 32rpx;
  min-height: 100rpx;
}
.content .item-inner{
  border-bottom: 1px solid #e7e6eb;
  padding-right: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #86888a;
  min-height: inherit;
}
.content .item-key{
  margin: 22rpx 16rpx 22rpx 0;
  width: 236rpx;
}
.content .item-value{
  flex: 1;
  min-width: 300rpx;
  min-height: 16px;
}
.writable .item-inner{
  color: #222;
}
.content .item-icon{
  font-size: 46rpx;
  color: #333;
  margin: 12rpx 12rpx 12rpx 0;
}
.content .item-icon.item-word{
  font-size: 26rpx;
  width: 64rpx;
}
.img-wrap{
  padding: 0 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.img {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 20rpx 0 0;
}
.img-btn{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 20rpx 0 0;
  border: 1px dashed #929292;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}
.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 100%;
  background-color: #f7f7f7;
}
.footer button{
  margin: 16rpx;
}
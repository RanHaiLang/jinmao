/* pages/kpi/kpi.wxss */
.container{
  width: 100%;
}
.ratio{
  width: 100%;
}
.ratio-inner{
  background-color: #f1f2f4;
  margin: 20rpx;
  font-size: 26rpx;
  line-height: 40rpx;
}
.ratio-title{
  padding: 5px;
  border-bottom: 1px solid #e7e6eb;
}
.ratio-content{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 28rpx;
  padding: 10rpx 0;
}
.ratio-item{
  display: flex;
  flex-direction: column;
  width: 33.333%;
  padding: 10rpx;
  text-align: center;
}
.ratio-item .value{
  font-size: 34rpx;
  line-height: 50rpx;
  color: #fff;
  border-radius: 10rpx;
}
.ratio-item:first-child .value{
  background-color:#dc6b66;
}
.ratio-item:nth-child(2) .value{
  background-color:#759aa0;
}
.ratio-item:nth-child(3) .value{
  background-color:#e69d87;
}
.ratio-item .key{
    color: #71829E;
    padding: 3px 0;
}


.echarts-wrap {
  width: 100%;
  height: 600rpx;
}